{
  "manifest_version": 3,
  "name": "URL Sender for Firefox",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "url-sender-firefox@example.com",
      "strict_min_version": "91.0"
    }
  },
  "action": {
    "default_popup": "popup.html"
  }
}
